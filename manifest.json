{
    "manifest_version": 3,
    "name": "Website Blocker Extension",
    "version": "1.1",
    "description": "Block websites and store user preferences.",
    "persistent": false,
    "permissions": [
      "activeTab",
      "webRequest",
      "storage",
      "webNavigation",
      "tabs"
    ],
    "action": {
      "default_popup": "index.html"
    },
    "icons": {
      "16": "images/WebPhoto16.png",
      "48": "images/WebPhoto16.png",
      "128": "images/WebPhoto16.png"
    },
    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["content.js"]
      }
    ]
}